{
  "name": "async",
  "version": "1.0.0",
  "main": "index.js",
  "author": "ryukato",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "yarn run compile:app && cp server.js build/ &&  node ./build/server.js",
    "compile:app": "babel src --out-dir build",
    "compile:contracts": "truffle compile",
    "build:app": "webpack --mode development --config webpack.config.js",
    "test:contractjs": "truffle test ./test/contracts/*.test.js --network in_memory",
    "test:contract": "CONTRACTS='testContract' truffle test ./test/contracts/*.sol --network in_memory",
    "test:app": "DEBUG='DEBUG' nyc --reporter=html mocha --require babel-core/register --colors ./test/app/*.spec.js --inspect",
    "deploy:contract-local": "rm -rf build/contracts/* && CONTRACTS='testContract' CONTRACT_FORCE_DEPLOY=true truffle migrate --network local",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "async": "^2.6.1",
    "body-parser": "^1.18.3",
    "check-ip": "^1.1.1",
    "cookie-parser": "~1.4.3",
    "debug": "^3.1.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-interceptor": "^1.2.0",
    "express-rate-limit": "^2.12.2",
    "http-errors": "^1.7.0",
    "moment": "^2.22.2",
    "morgan": "~1.9.0",
    "readline-sync": "^1.4.9",
    "winston": "^3.0.0",
    "winston-daily-rotate-file": "^3.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^5.3.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "json-loader": "^0.5.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "proxyquire": "^2.0.1",
    "supertest": "^3.1.0",
    "transform-runtime": "0.0.0",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "yargs": "^12.0.1",
    "coveralls": "^3.0.2",
    "truffle": "^4.1.11",
    "truffle-contract": "^1.1.11",
    "ganache-cli": "^6.1.0",
    "web3": "^0.20.0",
    "web3quorum": "^0.20.4"
  }
}
